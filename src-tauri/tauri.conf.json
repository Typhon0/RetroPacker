{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "RetroPacker",
	"version": "0.1.0",
	"identifier": "com.retropacker.app",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "RetroPacker",
				"width": 1000,
				"height": 700
			}
		],
		"security": {
			"csp": "default-src 'self' tauri: asset:; img-src 'self' asset: https: data: tauri:; connect-src 'self' https: http: ws:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' http: https:; font-src 'self' data:"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/chdman", "binaries/DolphinTool"]
	}
}
